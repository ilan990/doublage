{% extends 'base.html.twig' %}

{% block title %}Contrat Directeur Artistique{% endblock %}

{% block body %}

    <a style="position: fixed; top: 50%; transform: translateY(-50%);" class="btn btn-primary" href="{{ path('app_contrat_da_new') }}"><i class="bi bi-file-earmark-plus" style="font-size: 2em;"></i></a>
    <div class="container d-flex justify-content-center">
    {% for contrat_da in contrat_das %}
        <div class="col-md-2 col-sm-6 mx-4 my-4">
            <div class="card" style="width: 14rem;height:100%" >
                <img src="{{ asset('images/Film/' ~ contrat_da[0].imgFilm) }}" class="card-img-top" style="height:200px;width: auto;object-fit: cover;"  alt="...">
                <div class="card-body d-flex flex-column justify-content-end">
                    <h5 class="card-title">{{ contrat_da[0].titre }}</h5>
                    <h6 class="card-title">{{ contrat_da.production_nom }}</h6>
                    <p class="card-text">{{ contrat_da[0].montant }} â‚¬</p>
                </div>
                <div class="card-body d-flex justify-content-between" style="max-height: 65px">
                    <a href="{{ path('app_contrat_da_show', {'id_contrat_da': contrat_da[0].idContratDa}) }}"  class="btn btn-primary btn-sm"><i class="bi bi-search"></i> Voir</a>
                    <a href="{{ path('app_contrat_da_edit', {'id_contrat_da': contrat_da[0].idContratDa}) }}" class="btn btn-primary btn-sm">Modifier</a>
                </div>
            </div>
        </div>
        {% if loop.index % 5 == 0 %}
            </div><div class="container d-flex justify-content-center">
        {% endif %}
    {% else %}
        <tr>
            <td colspan="11">Pas de contrats</td>
        </tr>
    {% endfor %}
    </div>
{% endblock %}
