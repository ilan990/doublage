{% extends 'base.html.twig' %}

{% block title %}Comediens{% endblock %}

{% block body %}

    <a style="position: fixed; top: 50%; transform: translateY(-50%);" class="btn btn-primary" href="{{ path('app_comedien_new') }}"><i class="bi bi-person-add icon-white" style="font-size: 2em;"></i></a>
    <div class="container d-flex justify-content-center">
    {% for comedien in comediens %}
        <div class="col-md-2 col-sm-6 mx-4 my-4">
            <div class="card" style="width: 14rem;">
                <img src="{{ asset('images/avatar/' ~ comedien.imageName) }}" class="card-img-top" style="height:200px;width: auto"  alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ comedien.prenom }} {{ comedien.nom }}</h5>
                    <p class="card-text">{{ comedien.tauxjournalier }} € / Jour</p>
                </div>
                <div class="card-body d-flex justify-content-between">
                    <a href="{{ path('app_contrat_comedien_new', {'id_comedien': comedien.idComedien}) }}" class="btn btn-primary btn-sm"><i class="bi bi-file-earmark-plus"></i> Contrat</a>
                    <a class='btn btn-primary btn-sm' href="{{ path('app_comedien_show', {'id_comedien': comedien.idComedien}) }}"><i class="bi bi-search"></i> Voir</a>
                </div>
            </div>
        </div>
        {% if loop.index % 5 == 0 %}
            </div><div class="container d-flex justify-content-center">
        {% endif %}
    {% else %}
        <tr>
            <td colspan="11">Pas de comédiens</td>
        </tr>
    {% endfor %}
    </div>






