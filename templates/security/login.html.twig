{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% block nav %}{% endblock %}
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="card bg-white">
                        <div class="card-body p-5">
                            <form class="mb-3 mt-md-4" action="{{ path('security.login') }}" method="post">
                                <h2 class="fw-bold mb-2  " >DubbingDub</h2>
                                <div class="mb-3">
                                    <label for="username" class="login-label form-label " placeholder="name@example.com">Email:</label>
                                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="login-label form-label ">Password:</label>
                                    <input type="password" id="password" class="form-control" name="_password">

                                </div>

                                <input type="checkbox" name="_remember_me" checked>
                                <label for="_remember_me" class="remember" clalogin-label ss="form-label ">Se rappeler de moi</label>

                                <div class="d-grid">
                                    <button class="login-btn btn btn-outline-dark" type="submit">Connexion</button>
                                </div>

                            </form>
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




