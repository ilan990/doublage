<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %} - DubbingDub</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">


        <link rel="stylesheet" href="{{asset('assets/css/styles.css') }}">
        <link rel="stylesheet" href="{{asset('assets/css/navbar.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% if app.user %}
        <ul class="nav_ul">

            <li class="dropdown">
                <a href="#" class="dropbtn">Comédiens</a>
                <div class="dropdown-content">
                    <a href="#">Tous les comédiens</a>
                    <a href="#">Ajouter</a>
                    <a href="#">Option 3</a>
                </div>
            </li>
            <li class="dropdown">
                <a class="dropbtn">Contrats</a>
                <div class="dropdown-content">
                    <a href="#">Option 1</a>
                    <a href="#">Option 2</a>
                    <a href="#">Option 3</a>
                </div>
            </li>

        <li class="dropdown" style="margin-top: auto;"><a class="deconnexion" href="{{ path('security.logout') }}">Déconnexion</a></li>
        </ul>
    {% endif %}
    <div {% if app.user %}style="margin-left:12%;padding:0 16px;height:100vh"{% endif %}>
        {% block body %}{% endblock %}
    </div>
    </body>
    <script src="{{asset('assets/js/script.js') }}" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</html>
